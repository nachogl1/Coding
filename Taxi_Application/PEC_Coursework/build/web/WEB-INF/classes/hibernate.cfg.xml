<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/PEC_COURSEWORK</property>
    <property name="hibernate.connection.username">PEC_COURSEWORK</property>
    <property name="hibernate.connection.password">PEC</property>
    
    <!-- JDBC connection pool (use the built-in) -->
    <property name="hibernate.connection.pool_size">1</property>
    
    <!-- Drop and re-create database schema on startup -->
    <property name="hibernate.hbm2ddl.auto">update</property>
    
    <!--Echo all executed SQL to stdout -->
    <property name="hibernate.show_sql">true</property>
    
    <!--Names the annotated entity class -->
    <mapping class="model.Driver" />
    <mapping class="model.Driver_qualification" />
    <mapping class="model.Disciplinary_records_profile" />
    <mapping class="model.Incident" />
    <mapping class="model.Journey" />
    <mapping class="model.Qualification" />
    <mapping class="model.Schedule" />
    <mapping class="model.Shift" />
    <mapping class="model.Training" />
    <mapping class="model.Training_profile" />
      
    
    </session-factory>
</hibernate-configuration>
